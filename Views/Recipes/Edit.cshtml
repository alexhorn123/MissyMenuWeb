@model MissyMenuWeb.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                @for (var i = 0; i < Model.Ingredients.Count; i++)
        {
         <label asp-for="Ingredients.ElementAt(i).ViewModel.IngredientName" class="control-label"></label>
                <input asp-for="Ingredients.ElementAt(i).ViewModel.IngredientName" class="form-control" />
                <span asp-validation-for="Ingredients.ElementAt(i).ViewModel.IngredientName" class="text-danger"></span>
    }
            </div>

             <div class="form-group">
                @for (var i = 0; i < Model.Directions.Count; i++)
        {
         <label asp-for="Directions.ElementAt(i).ViewModel" class="control-label"></label>
                <input asp-for="Directions.ElementAt(i).ViewModel" class="form-control" />
                <span asp-validation-for="Directions.ElementAt(i).ViewModel" class="text-danger"></span>
    }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
